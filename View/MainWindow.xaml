<Window x:Class="MVVM_Organiser.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:MVVM_Organiser" xmlns:local1="clr-namespace:MVVM_Organiser.ViewModel"
        Title="MainWindow" Height="450" Width="800">

    <Window.DataContext>
        <local1:ToDoViewModel></local1:ToDoViewModel>   
    </Window.DataContext>
    <Grid>
        <DataGrid
            x:Name="dgTodoList"
            Margin="10"
            AutoGenerateColumns="False"
            FontSize="16"
            FontWeight="Bold">
            <DataGrid.Columns>
                <DataGridTextColumn
                    Width="160"
                    Binding="{Binding Path=CreationDate}"
                    Header="CreationDate"
                    IsReadOnly="True" />
                <DataGridCheckBoxColumn
                    Width="65"
                    Binding="{Binding Path=IsDone, UpdateSourceTrigger=PropertyChanged}"
                    Header="Done"
                    IsReadOnly="False" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Path=Text}"
                    Header="Todo"
                    IsReadOnly="False" />
            </DataGrid.Columns>
        </DataGrid>
        
    </Grid>
</Window>
